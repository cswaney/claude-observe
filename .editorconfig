# EditorConfig: https://editorconfig.org

root = true

# Defaults for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# JavaScript files
[*.{js,jsx}]
indent_style = tab
indent_size = 2

# JSON files
[*.json]
indent_style = tab
indent_size = 2

# Markdown (preserve trailing spaces for line breaks)
[*.md]
trim_trailing_whitespace = false

# YAML (GitHub Actions)
[*.{yml,yaml}]
indent_style = space
indent_size = 2
