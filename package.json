{
	"name": "claude-observe",
	"version": "0.1.0",
	"description": "A terminal UI for observing and analyzing Claude conversation logs",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/cswaney/claude-observe.git"
	},
	"keywords": [
		"claude",
		"anthropic",
		"cli",
		"terminal",
		"tui",
		"observer",
		"logs",
		"analytics"
	],
	"author": "Colin Swaney",
	"bin": "dist/cli.js",
	"type": "module",
	"engines": {
		"node": ">=16"
	},
	"scripts": {
		"build": "node build.js",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"lint": "xo",
		"lint:fix": "xo --fix",
		"test": "ava",
		"check": "npm run format:check && npm run lint && npm run test",
		"prepublishOnly": "npm run check && npm run build"
	},
	"files": [
		"dist"
	],
	"dependencies": {
		"@mishieck/ink-titled-box": "^0.3.0",
		"ink": "^6.5.1",
		"ink-big-text": "^2.0.0",
		"ink-gradient": "^3.0.0",
		"meow": "^11.0.0",
		"react": "^19.2.0"
	},
	"devDependencies": {
		"@vdemedes/prettier-config": "^2.0.1",
		"ava": "^6.4.1",
		"chalk": "^5.2.0",
		"esbuild": "^0.27.1",
		"eslint-config-xo-react": "^0.27.0",
		"eslint-plugin-react": "^7.32.2",
		"eslint-plugin-react-hooks": "^4.6.0",
		"import-jsx": "^5.0.0",
		"ink-testing-library": "^3.0.0",
		"prettier": "^2.8.7",
		"xo": "^0.53.1"
	},
	"ava": {
		"extensions": {
			"js": true
		},
		"environmentVariables": {
			"NODE_NO_WARNINGS": "1"
		},
		"files": [
			"source/**/*.test.js"
		]
	},
	"xo": {
		"extends": "xo-react",
		"prettier": true,
		"rules": {
			"react/prop-types": "off"
		}
	},
	"prettier": "@vdemedes/prettier-config"
}
